  <!-- === CR improvised === -->
  <RecipeDef>
    <defName>MakeImprovisedTurret</defName>
    <label>make improvised turret</label>
    <description>Craft an improvised turret.</description>
    <jobString>Making improvised turret.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2500</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SteelBar</li>
          </thingDefs>
        </filter>
        <count>120</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SteelBar</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <TurretGun>1</TurretGun>
    </products>
  </RecipeDef>









