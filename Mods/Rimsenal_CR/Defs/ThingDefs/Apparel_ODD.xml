    <description>A helmet of the distortion suit. This helmet shares the characters of distortion suit.</description>
    <graphicData> <texPath>Things/Apparel/AntumbraHelmet</texPath>
    <graphicClass>Graphic_Single</graphicClass> </graphicData>
    <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <MarketValue>1800</MarketValue>
            <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
            <Insulation_Cold>-25</Insulation_Cold>
            <Insulation_Heat>25</Insulation_Heat>
            <Rimsenal_OpticEvasion>0.2</Rimsenal_OpticEvasion> 
    </statBases>
    <apparel>
      <layers>
        <li>Overhead</li>
      </layers>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <commonality>0.1</commonality>
      <worngraphicPath>Things/Apparel/AntumbraHelmet</worngraphicPath>
    </apparel>
        <soundEvasion>ODD</soundEvasion>
    </ThingDef>

    <ThingDef Class="Rimsenal.Core.ThingDef_OpticCamo" ParentName="ApparelBase">
    <defName>Apparel_ODD</defName>
    <thingClass>Rimsenal.Core.OpticCamo</thingClass>
