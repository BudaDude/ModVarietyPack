<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

    <ThingDef Abstract="True" Name="ApparelBase">
        <thingClass>Apparel</thingClass>
        <category>Item</category>
        <selectable>True</selectable>
        <pathCost>10</pathCost>
        <useHitPoints>True</useHitPoints>
        <graphicData>
            <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
        </graphicData>
        <drawGUIOverlay>true</drawGUIOverlay>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>1</DeteriorationRate>
            <SellPriceFactor>0.5</SellPriceFactor>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>True</alwaysHaulable>
        <tickerType>Never</tickerType>
        <thingCategories>
            <li>YPApparel</li>
        </thingCategories>
        <comps>
            <li>
                <compClass>CompForbiddable</compClass>
            </li>
            <li>
                <compClass>CompColorable</compClass>
            </li>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>
    </ThingDef>

    <ThingDef Class="Rimsenal.Core.ThingDef_OpticCamo" ParentName="ApparelBase">
        <defName>Apparel_Antumbra</defName>
        <description>A Yunhwa Model-17c "Antumbra" distortion suit. The "party dress" of the Yunhwa's agent unit, this advanced combat suit has an optical distortion device that makes it hard to draw a bead on the user.</description>
        <thingClass>Rimsenal.Core.OpticCamo</thingClass>
        <label>distortion suit</label>
        <graphicData>
            <texPath>Things/Apparel/Antumbra</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <MaxHitPoints>250</MaxHitPoints>
            <MarketValue>5200</MarketValue>
            <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
            <Insulation_Cold>-25</Insulation_Cold>
            <Insulation_Heat>25</Insulation_Heat>
            <Rimsenal_OpticEvasion>0.4</Rimsenal_OpticEvasion> 
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Middle</li>
                <li>Shell</li>
            </layers>
            <commonality>0.1</commonality>
            <worngraphicPath>Things/Apparel/Antumbra</worngraphicPath>
        </apparel>
        <soundEvasion>ODD</soundEvasion>
    </ThingDef>

    <ThingDef Class="Rimsenal.Core.ThingDef_OpticCamo" ParentName="ApparelBase">
    <defName>Apparel_AntumbraHelmet</defName>
    <thingClass>Rimsenal.Core.OpticCamo</thingClass>
